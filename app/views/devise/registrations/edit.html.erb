<div class = "container-login">
  <h1>マイページを編集</h1>
  <p class="text-right"><a  href="/users/<%=current_user.id %>">１年生に表示されるマイページを表示</a></p>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= bootstrap_devise_error_messages! %>
  
    <div class="form-group">
      <%= f.label "サークル名" %>
      <%= f.text_field :name, autofocus: true, autocomplete: 'name', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label "何サークル?"%>
      <%= f.text_field :kind, autocomplete: 'new-kind', class: 'form-control'  %>
    </div>
    <div class="form-group">
      <%= f.label "Twitterアカウント名（@以降）" %>
      <%= f.text_field :twitter, autocomplete: 'new-twitter', class: 'form-control'  %>
    </div>
    <div class="form-group">
      <%= f.label "Instagramアカウント名（@以降）" %>
      <%= f.text_field :instagram, autocomplete: 'new-instagram', class: 'form-control'  %>
    </div>
    <div class="form-group">
      <%= f.label "活動頻度" %>
      <%= f.text_field :often, autocomplete: 'new-often', class: 'form-control'  %>
    </div>
    <div class="form-group">
      <%= f.label "活動内容・ 特徴" %>
      <%= f.text_field :content, autocomplete: 'new-content', class: 'form-control'  %>
    </div>
    <div class="form-group">
      <%= f.label "男女比  [男:女]" %>
      <%= f.text_field :gender, autocomplete: 'new-gender', class: 'form-control'  %>
    </div>
    <div class="form-group">
      <%= f.label "飲みの頻度" %>
      <%= f.text_field :alcohol, autocomplete: 'new-alcohol', class: 'form-control'  %>
    </div>
    <div class="form-group">
      <%= f.label "部費  [円]" %>
      <%= f.text_field :expenses, autocomplete: 'new-expenses', class: 'form-control'  %>
    </div>
    <div class="form-group">
      <%= f.label "部室の有無" %>
      <%= f.text_field :room, autocomplete: 'new-room', class: 'form-control'  %>
    </div>
    <div class="form-group">
      <%= f.label  "学祭に出店" %>
      <%= f.text_field :fes, autocomplete: 'new-fes', class: 'form-control'  %>
    </div>
    <div class="form-group">
      <%= f.label  "サークルのガチ度 (MAX 10点)" %>
      <%= f.text_field :gachi, autocomplete: 'new-gachi', class: 'form-control'  %>
    </div>
    <div class="form-group">
      <%= f.label "パリピ度  (MAX 10点)" %>
      <%= f.text_field :party, autocomplete: 'new-party', class: 'form-control'  %>
    </div>
    <div class="form-group">
      <%= f.label "規模  [人数]" %>
      <%= f.text_field :numbers, autocomplete: 'new-numbers', class: 'form-control'  %>
    </div>
    <hr>
    <hr>
    <small class="form-text text-muted"><p>こちらはメール・パスワードを変更したい場合のみ入力</p></small>
    
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control' %>
  
      <small class="form-text text-muted"><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></small>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control'  %>
    </div>
    <hr>
    <hr>
    <div class="form-group">
      <small class="form-text text-muted"><%= t('.we_need_your_current_password_to_confirm_your_changes') %></small>
      <%= f.label :current_password %>
      <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control' %>
      
    </div>
  
    <div class="form-group">
      <%= f.submit t('.update'), class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>
  
  <hr class="devise-link my-5">
  <div class="form-group">
    <%= link_to "トップページ", root_path, class: 'btn btn-info btn-block mb-4' %>
    <%= link_to t('.cancel_my_account'), registration_path(resource_name), data: {confirm: t('.are_you_sure')}, method: :delete, class: 'btn btn-danger btn-block' %>
  </div>
</div>