<h1>新規新歓情報　追加画面</h1>

<a href ="#">トップページへ戻る</a> 
<hr>

<%= form_tag ("/create") do %>
    <div class="form-group">
        <%= label_tag "form_title" ,"サークル名"%>
        <%=text_field :memos,:title, id:"form_title",class:"form-control",placeholder:"(例)　テニスサークル Ruby" %>
    </div>
    <div class="form-group">
        <%= label_tag "form_body" ,"新歓情報"%>
        <%=text_field :memos,:body, id:"form_body" ,class:"form-control",placeholder:"(例)　無料で焼肉"%>
    </div>
    <div class="form-group">
    <%= label_tag "form-category" ,"新歓のジャンル"%>
    <%= select_tag 'memos[category_id]',options_from_collection_for_select(@categories, :id,:name),id:"form-category" ,class:"form-control" %>
    </div>
    <%= submit_tag "送信" ,class:"btn btn-primary"%>
<% end %>