<h3>メモの内容を変更</h3>

<a href ="#">トップページに戻る</a> 

<%= form_tag("/memos/"+@memo.id.to_s,:method=>:patch) do %>
    <div class="form-group">
        <%= label_tag "form_title" ,"title"%>
        <%=text_field :memos,:title, id:"form_title",class:"form-control",value:@memo.title %>
    </div>
    <div class="form-group">
        <%= label_tag "form_body" ,"content"%>
        <%=text_field :memos,:body, id:"form_body" ,class:"form-control",value:@memo.body%>
    </div>
    <div class="form-group">
        <%= label_tag "form-category" ,"category"%>
        <%= select_tag 'memos[category_id]',options_from_collection_for_select(@categories, :id,:name),id:"form-category" ,class:"form-control"%>
    </div>
    <%= submit_tag "更新" ,class:"btn btn-primary"%>
<% end %>