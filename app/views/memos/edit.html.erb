<h3>メモの内容を変更</h3>

<a href ="#">トップページに戻る</a> 

<%= form_tag("/memos/"+@memo.id.to_s,:method=>:patch) do %>
    <div class="form-group">
        <%= label_tag "form_title" ,"イベントタイトル"%>
        <%=text_field :memos,:title, id:"form_title",class:"form-control",value:@memo.title %>
    </div>
    <div class="form-group">
        <%= label_tag "form_body" ,"ひとこと"%>
        <%=text_field :memos,:body, id:"form_body" ,class:"form-control",value:@memo.body%>
    </div>
    <div class="form-group">
        <%= label_tag "form-category" ,"新歓のジャンル"%>
        <%= select_tag 'memos[category_id]',options_from_collection_for_select(@categories, :id,:name),id:"form-category" ,class:"form-control"%>
    </div>
    <div class="form-group">
        <%= label_tag "form-day" ,"開催日"%>
        <%= date_field :memos,:day ,id:"form_day",class:"form-control",value:@memo.day%>
    </div>
    <div class="form-group">
        <%= label_tag "form-time" ,"開始時間"%>
        <%= text_field :memos,:times ,id:"form_time",class:"form-control",value:@memo.times%>
    </div>
    <div class="form-group">
        <%= label_tag "form-place" ,"開始場所"%>
        <%= text_field :memos,:place ,id:"form_place",class:"form-control",value:@memo.place%>
    </div>
    <div class="form-group">
    <%= submit_tag "更新" ,class:"btn btn-primary"%>
    </div>
<% end %>